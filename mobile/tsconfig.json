{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@/components/common/*": ["./src/components/common/*"],
      "@/components/common": ["./src/components/common"],
      "@/components/features/*": ["./src/components/features/*"],
      "@/components/features": ["./src/components/features"],
      "@/components/*": ["./src/components/*"],
      "@/components": ["./src/components"],
      "@/constants/*": ["./src/constants/*"],
      "@/constants": ["./src/constants"],
      "@/hooks/*": ["./src/hooks/*"],
      "@/hooks": ["./src/hooks"],
      "@/services/*": ["./src/services/*"],
      "@/services": ["./src/services"],
      "@/store/*": ["./src/store/*"],
      "@/store": ["./src/store"],
      "@/types/*": ["./src/types/*"],
      "@/types": ["./src/types"],
      "@/utils/*": ["./src/utils/*"],
      "@/utils": ["./src/utils"],
      "@/assets/*": ["./assets/*"],
      "@/*": ["./*"]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts"
  ]
}

