# AI Service Configuration
API_SERVICE_KEY=your-secret-api-key-here

# AI Service Configuration
API_SERVICE_KEY=your-secret-api-key-here

# Model Configuration
MODEL_DEVICE=cpu

# LiteLLM + Hugging Face Configuration
# Based on architecture.md recommendations:
# - Text LLM: Kimi-K2-Instruct (Moonshot AI) OR BioMistral-7B
# - Vision: BLIP or LLaVA small
# - Embeddings: sentence-transformers/all-MiniLM-L6-v2

# Hugging Face Token (required for HF Inference API)
HF_TOKEN=your-huggingface-token-here

# Hugging Face Inference Provider (default: together)
# Options: together, sambanova, fal, replicate, hyperbolic, nebius, novita
HF_INFERENCE_PROVIDER=together

# Hugging Face Model for text generation
HF_TEXT_MODEL=moonshotai/Kimi-K2-Instruct

# Hugging Face Model for vision tasks (optional)
HF_VISION_MODEL=llava-hf/llava-1.5-7b-hf

# Custom API Base URL (optional, for LiteLLM proxy)
# OPENAI_BASE_URL=http://localhost:8000/v1

# USDA FoodData Central API (for accurate nutrition data)
# Get free API key: https://fdc.nal.usda.gov/api-key-signup.html
USDA_API_KEY=your-usda-api-key-here

# Supabase Configuration (for auth and database)
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_KEY=your-supabase-key-here

# Vector Database Configuration (for RAG)
# Option 1: Qdrant
QDRANT_URL=http://localhost:6333
QDRANT_API_KEY=your-qdrant-api-key

# Logging
LOG_LEVEL=INFO

# Agent Configuration
OPENAI_AGENTS_TRACING=false
